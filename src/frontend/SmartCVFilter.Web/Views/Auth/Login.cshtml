@using SmartCVFilter.Web.Models
@model LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<form asp-controller="Auth" asp-action="Login" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    @Html.Hidden("returnUrl", ViewData["ReturnUrl"])
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email Address</label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-envelope"></i>
            </span>
            <input asp-for="Email" name="Email" class="form-control" placeholder="Enter your email" required />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-lock"></i>
            </span>
            <input asp-for="Password" name="Password" type="password" class="form-control"
                placeholder="Enter your password" required />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="rememberMe">
        <label class="form-check-label" for="rememberMe">
            Remember me
        </label>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg" id="loginButton">
            <i class="bi bi-box-arrow-in-right"></i>
            Sign In
        </button>
    </div>

    <div class="text-center mt-3">
        <p class="text-muted">
            Don't have an account?
            <a asp-action="Register" class="text-decoration-none">Sign up here</a>
        </p>
    </div>

    <!-- Test Notifications (for development) -->
    <div class="mt-4 pt-3 border-top">
        <h6 class="text-muted mb-3">Test Notifications:</h6>
        <div class="d-grid gap-2">
            <button type="button" class="btn btn-outline-success btn-sm"
                onclick="showSuccess('Login successful!', 'Success', 3000)">
                <i class="bi bi-check-circle me-1"></i> Test Success
            </button>
            <button type="button" class="btn btn-outline-danger btn-sm"
                onclick="showError('Invalid credentials!', 'Login Failed', 0)">
                <i class="bi bi-exclamation-triangle me-1"></i> Test Error
            </button>
            <button type="button" class="btn btn-outline-warning btn-sm"
                onclick="showWarning('Please check your input!', 'Warning', 5000)">
                <i class="bi bi-exclamation-circle me-1"></i> Test Warning
            </button>
            <button type="button" class="btn btn-outline-info btn-sm"
                onclick="showInfo('This is a test notification!', 'Info', 4000)">
                <i class="bi bi-info-circle me-1"></i> Test Info
            </button>
            <a href="/Home/TestNotification" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-server me-1"></i> Test Server Notifications
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            const loginButton = document.getElementById('loginButton');

            if (form) {
                form.addEventListener('submit', function (e) {
                    console.log('Form submit event triggered');
                    console.log('Form valid:', form.checkValidity());

                    // Log form data for debugging
                    const formData = new FormData(form);
                    console.log('Form data entries:');
                    for (let [key, value] of formData.entries()) {
                        console.log(key + ': ' + value);
                    }

                    // Check if email and password fields have values
                    const emailField = form.querySelector('input[name="Email"]');
                    const passwordField = form.querySelector('input[name="Password"]');
                    console.log('Email field value:', emailField ? emailField.value : 'NOT FOUND');
                    console.log('Password field value:', passwordField ? (passwordField.value ? '***' : 'EMPTY') : 'NOT FOUND');

                    // Also check by asp-for attributes
                    const emailFieldAsp = form.querySelector('input[asp-for="Email"]');
                    const passwordFieldAsp = form.querySelector('input[asp-for="Password"]');
                    console.log('Email field (asp-for) value:', emailFieldAsp ? emailFieldAsp.value : 'NOT FOUND');
                    console.log('Password field (asp-for) value:', passwordFieldAsp ? (passwordFieldAsp.value ? '***' : 'EMPTY') : 'NOT FOUND');

                    // Check all input fields
                    const allInputs = form.querySelectorAll('input');
                    console.log('All input fields:');
                    allInputs.forEach((input, index) => {
                        console.log(`Input ${index}: name="${input.name}", value="${input.value}", type="${input.type}"`);
                    });
                });
            }

            if (loginButton) {
                loginButton.addEventListener('click', function (e) {
                    console.log('Login button clicked');
                });
            }
        });
    </script>
}
