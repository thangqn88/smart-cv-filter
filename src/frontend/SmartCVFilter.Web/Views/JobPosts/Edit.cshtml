@using SmartCVFilter.Web.Models
@model UpdateJobPostRequest
@{
    ViewData["Title"] = "Edit Job Post";
    Layout = "_Layout";
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div>
                <h1 class="h2 mb-1 text-dark">
                    <i class="bi bi-pencil text-primary me-2"></i>
                    Edit Job Post
                </h1>
                <p class="text-muted mb-0">Update job posting information and requirements</p>
            </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<form asp-controller="JobPosts" asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.Hidden("id", ViewContext.RouteData.Values["id"])
    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card shadow-lg border-0 mb-4 hover-card">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-info-circle text-primary me-2"></i>
                        Basic Information
                    </h5>
                    <p class="text-muted mb-0">Essential details about the position</p>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Title" class="form-control"
                                    placeholder="e.g., Senior Software Developer" 
                                    value="@(Model?.Title ?? "")" required />
                                <label asp-for="Title">Job Title *</label>
                            </div>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Location" class="form-control" placeholder="e.g., New York, NY"
                                    value="@(Model?.Location ?? "")" required />
                                <label asp-for="Location">Location *</label>
                            </div>
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Department" class="form-control" placeholder="e.g., Engineering"
                                    value="@(Model?.Department ?? "")" required />
                                <label asp-for="Department">Department *</label>
                            </div>
                            <span asp-validation-for="Department" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="EmploymentType" class="form-select" required>
                                    <option value="">Select employment type</option>
                                    <option value="Full-time" selected="@(Model?.EmploymentType == "Full-time")">Full-time</option>
                                    <option value="Part-time" selected="@(Model?.EmploymentType == "Part-time")">Part-time</option>
                                    <option value="Contract" selected="@(Model?.EmploymentType == "Contract")">Contract</option>
                                    <option value="Internship" selected="@(Model?.EmploymentType == "Internship")">Internship</option>
                                    <option value="Remote" selected="@(Model?.EmploymentType == "Remote")">Remote</option>
                                </select>
                                <label asp-for="EmploymentType">Employment Type *</label>
                            </div>
                            <span asp-validation-for="EmploymentType" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="ExperienceLevel" class="form-select" required>
                                    <option value="">Select experience level</option>
                                    <option value="Entry Level" selected="@(Model?.ExperienceLevel == "Entry Level")">Entry Level</option>
                                    <option value="Mid Level" selected="@(Model?.ExperienceLevel == "Mid Level")">Mid Level</option>
                                    <option value="Senior Level" selected="@(Model?.ExperienceLevel == "Senior Level")">Senior Level</option>
                                    <option value="Lead" selected="@(Model?.ExperienceLevel == "Lead")">Lead</option>
                                    <option value="Executive" selected="@(Model?.ExperienceLevel == "Executive")">Executive</option>
                                </select>
                                <label asp-for="ExperienceLevel">Experience Level *</label>
                            </div>
                            <span asp-validation-for="ExperienceLevel" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="SalaryMin" class="form-label fw-bold text-dark mb-2">
                                <i class="bi bi-currency-dollar text-success me-1"></i>
                                Minimum Salary
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">$</span>
                                <input asp-for="SalaryMin" type="number" class="form-control border-start-0"
                                    placeholder="50000" min="0" step="1000" value="@(Model?.SalaryMin?.ToString() ?? "")" />
                            </div>
                            <span asp-validation-for="SalaryMin" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SalaryMax" class="form-label fw-bold text-dark mb-2">
                                <i class="bi bi-currency-dollar text-success me-1"></i>
                                Maximum Salary
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">$</span>
                                <input asp-for="SalaryMax" type="number" class="form-control border-start-0"
                                    placeholder="80000" min="0" step="1000" value="@(Model?.SalaryMax?.ToString() ?? "")" />
                            </div>
                            <span asp-validation-for="SalaryMax" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="Status" class="form-select">
                                    <option value="Draft" selected="@(Model?.Status == "Draft")">Draft</option>
                                    <option value="Active" selected="@(Model?.Status == "Active")">Active</option>
                                    <option value="Inactive" selected="@(Model?.Status == "Inactive")">Inactive</option>
                                    <option value="Closed" selected="@(Model?.Status == "Closed")">Closed</option>
                                </select>
                                <label asp-for="Status">Status</label>
                            </div>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="ClosingDate" type="date" class="form-control" 
                                    value="@(Model?.ClosingDate?.ToString("yyyy-MM-dd") ?? "")" />
                                <label asp-for="ClosingDate">Closing Date</label>
                            </div>
                            <span asp-validation-for="ClosingDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Job Description -->
            <div class="card shadow-lg border-0 mb-4 hover-card">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-file-text text-primary me-2"></i>
                        Job Description *
                    </h5>
                    <p class="text-muted mb-0">Detailed overview of the position and role</p>
                </div>
                <div class="card-body p-4">
                    <div class="form-floating">
                        <textarea asp-for="Description" class="form-control" rows="6"
                            placeholder="Provide a detailed description of the role, responsibilities, and what the candidate will be working on..."
                            required>@(Model?.Description ?? "")</textarea>
                        <label asp-for="Description">Job Description *</label>
                    </div>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>

            <!-- Skills and Requirements -->
            <div class="card shadow-lg border-0 mb-4 hover-card">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Skills and Requirements
                    </h5>
                    <p class="text-muted mb-0">Essential and preferred qualifications</p>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="RequiredSkills" class="form-control" rows="3"
                                    placeholder="List the essential skills and qualifications required for this position...">@(Model?.RequiredSkills ?? "")</textarea>
                                <label asp-for="RequiredSkills">Required Skills</label>
                            </div>
                            <span asp-validation-for="RequiredSkills" class="text-danger small"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="PreferredSkills" class="form-control" rows="3"
                                    placeholder="List any additional skills that would be beneficial but not required...">@(Model?.PreferredSkills ?? "")</textarea>
                                <label asp-for="PreferredSkills">Preferred Skills</label>
                            </div>
                            <span asp-validation-for="PreferredSkills" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Responsibilities and Benefits -->
            <div class="card shadow-lg border-0 mb-4 hover-card">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-list-task text-info me-2"></i>
                        Responsibilities and Benefits
                    </h5>
                    <p class="text-muted mb-0">Key duties and company offerings</p>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Responsibilities" class="form-control" rows="4"
                                    placeholder="Outline the main responsibilities and duties for this role...">@(Model?.Responsibilities ?? "")</textarea>
                                <label asp-for="Responsibilities">Key Responsibilities</label>
                            </div>
                            <span asp-validation-for="Responsibilities" class="text-danger small"></span>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Benefits" class="form-control" rows="4"
                                    placeholder="Describe the benefits, perks, and opportunities this position offers...">@(Model?.Benefits ?? "")</textarea>
                                <label asp-for="Benefits">Benefits and Perks</label>
                            </div>
                            <span asp-validation-for="Benefits" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Preview Card -->
            <div class="card shadow-lg border-0 mb-4 hover-card">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-eye text-info me-2"></i>
                        Live Preview
                    </h5>
                    <p class="text-muted mb-0">See how your job post will appear</p>
                </div>
                <div class="card-body p-4">
                    <div id="previewContent" class="border rounded p-3 bg-light">
                        <h6 class="text-muted mb-2">Job title will appear here</h6>
                        <p class="text-muted small mb-1">Location • Department</p>
                        <p class="text-muted small mb-0">Employment Type • Experience Level</p>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-lg border-0 hover-card">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-lightning text-warning me-2"></i>
                        Actions
                    </h5>
                    <p class="text-muted mb-0">Save or cancel your changes</p>
                </div>
                <div class="card-body p-4">
                    <div class="d-grid gap-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle me-2"></i>
                            Update Job Post
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Live preview functionality
        function updatePreview() {
            const title = document.querySelector('input[name="Title"]').value || 'Job title will appear here';
            const location = document.querySelector('input[name="Location"]').value || 'Location';
            const department = document.querySelector('input[name="Department"]').value || 'Department';
            const employmentType = document.querySelector('select[name="EmploymentType"]').value || 'Employment Type';
            const experienceLevel = document.querySelector('select[name="ExperienceLevel"]').value || 'Experience Level';

            const previewContent = document.getElementById('previewContent');
            previewContent.innerHTML = `
                            <h6 class="text-dark mb-2">${title}</h6>
                            <p class="text-muted small mb-1">${location} • ${department}</p>
                            <p class="text-muted small mb-0">${employmentType} • ${experienceLevel}</p>
                        `;
        }

        // Add event listeners for live preview
        document.querySelectorAll('input[name="Title"], input[name="Location"], input[name="Department"], select[name="EmploymentType"], select[name="ExperienceLevel"]').forEach(element => {
            element.addEventListener('input', updatePreview);
            element.addEventListener('change', updatePreview);
        });

        // Initialize preview
        updatePreview();

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .form-floating>.form-control:focus~label,
    .form-floating>.form-control:not(:placeholder-shown)~label {
        color: var(--bs-primary);
    }

    .form-floating>.form-control:focus {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.2rem rgba(var(--bs-primary-rgb), 0.25);
    }
</style>
