@using SmartCVFilter.Web.Models
@model CreateJobPostRequest
@{
    ViewData["Title"] = "Create Job Post";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Create New Job Post</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            Back to List
        </a>
    </div>
</div>

<form asp-controller="JobPosts" asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i>
                        Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Title" class="form-label">Job Title *</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g., Senior Software Developer"
                                required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Location" class="form-label">Location *</label>
                            <input asp-for="Location" class="form-control" placeholder="e.g., New York, NY" required />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label">Department *</label>
                            <input asp-for="Department" class="form-control" placeholder="e.g., Engineering" required />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmploymentType" class="form-label">Employment Type *</label>
                            <select asp-for="EmploymentType" class="form-select" required>
                                <option value="">Select employment type</option>
                                <option value="Full-time">Full-time</option>
                                <option value="Part-time">Part-time</option>
                                <option value="Contract">Contract</option>
                                <option value="Internship">Internship</option>
                                <option value="Remote">Remote</option>
                            </select>
                            <span asp-validation-for="EmploymentType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExperienceLevel" class="form-label">Experience Level *</label>
                            <select asp-for="ExperienceLevel" class="form-select" required>
                                <option value="">Select experience level</option>
                                <option value="Entry Level">Entry Level</option>
                                <option value="Mid Level">Mid Level</option>
                                <option value="Senior Level">Senior Level</option>
                                <option value="Lead">Lead</option>
                                <option value="Executive">Executive</option>
                            </select>
                            <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SalaryMin" class="form-label">Minimum Salary</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="SalaryMin" type="number" class="form-control" placeholder="50000"
                                    min="0" step="1000" />
                            </div>
                            <span asp-validation-for="SalaryMin" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SalaryMax" class="form-label">Maximum Salary</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="SalaryMax" type="number" class="form-control" placeholder="80000"
                                    min="0" step="1000" />
                            </div>
                            <span asp-validation-for="SalaryMax" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClosingDate" class="form-label">Closing Date</label>
                            <input asp-for="ClosingDate" type="date" class="form-control" />
                            <span asp-validation-for="ClosingDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Job Description -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text"></i>
                        Job Description *
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="6"
                            placeholder="Provide a detailed description of the role, responsibilities, and what the candidate will be working on..."
                            required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Skills and Requirements -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-check-circle"></i>
                        Skills and Requirements
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="RequiredSkills" class="form-label">Required Skills</label>
                        <textarea asp-for="RequiredSkills" class="form-control" rows="3"
                            placeholder="List the essential skills and qualifications required for this position..."></textarea>
                        <span asp-validation-for="RequiredSkills" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PreferredSkills" class="form-label">Preferred Skills</label>
                        <textarea asp-for="PreferredSkills" class="form-control" rows="3"
                            placeholder="List any additional skills that would be beneficial but not required..."></textarea>
                        <span asp-validation-for="PreferredSkills" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Responsibilities and Benefits -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-list-task"></i>
                        Responsibilities and Benefits
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Responsibilities" class="form-label">Key Responsibilities</label>
                        <textarea asp-for="Responsibilities" class="form-control" rows="4"
                            placeholder="Outline the main responsibilities and duties for this role..."></textarea>
                        <span asp-validation-for="Responsibilities" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Benefits" class="form-label">Benefits and Perks</label>
                        <textarea asp-for="Benefits" class="form-control" rows="4"
                            placeholder="Describe the benefits, perks, and opportunities this position offers..."></textarea>
                        <span asp-validation-for="Benefits" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Preview Card -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-eye"></i>
                        Preview
                    </h5>
                </div>
                <div class="card-body">
                    <div id="previewContent">
                        <h6 class="text-muted">Job title will appear here</h6>
                        <p class="text-muted">Location • Department</p>
                        <p class="text-muted">Employment Type • Experience Level</p>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i>
                        Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i>
                            Create Job Post
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i>
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Live preview functionality
        function updatePreview() {
            const title = document.querySelector('input[name="Title"]').value || 'Job title will appear here';
            const location = document.querySelector('input[name="Location"]').value || 'Location';
            const department = document.querySelector('input[name="Department"]').value || 'Department';
            const employmentType = document.querySelector('select[name="EmploymentType"]').value || 'Employment Type';
            const experienceLevel = document.querySelector('select[name="ExperienceLevel"]').value || 'Experience Level';

            const previewContent = document.getElementById('previewContent');
            previewContent.innerHTML = `
                                <h6>${title}</h6>
                                <p class="text-muted">${location} • ${department}</p>
                                <p class="text-muted">${employmentType} • ${experienceLevel}</p>
                            `;
        }

        // Add event listeners for live preview
        document.querySelectorAll('input[name="Title"], input[name="Location"], input[name="Department"], select[name="EmploymentType"], select[name="ExperienceLevel"]').forEach(element => {
            element.addEventListener('input', updatePreview);
            element.addEventListener('change', updatePreview);
        });

        // Initialize preview
        updatePreview();
    </script>
}
