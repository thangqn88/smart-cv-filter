@model dynamic
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-download"></i>
                        Export Report
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Job Posts
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalJobPosts</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-briefcase fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Active Job Posts
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveJobPosts</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Applicants
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalApplicants</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Pending Reviews
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Job Posts -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Job Posts</h6>
            </div>
            <div class="card-body">
                @if (Model.RecentJobPosts != null && Model.RecentJobPosts.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered" id="recentJobPostsTable">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Location</th>
                                    <th>Department</th>
                                    <th>Status</th>
                                    <th>Applicants</th>
                                    <th>Posted Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var jobPost in Model.RecentJobPosts)
                                {
                                    <tr>
                                        <td>@jobPost.Title</td>
                                        <td>@jobPost.Location</td>
                                        <td>@jobPost.Department</td>
                                        <td>
                                            <span class="badge @(jobPost.Status == "Active" ? "bg-success" : "bg-secondary")">
                                                @jobPost.Status
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@jobPost.ApplicantCount</span>
                                        </td>
                                        <td>@jobPost.PostedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a href="@Url.Action("Details", "JobPosts", new { id = jobPost.Id })"
                                                class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-briefcase display-1 text-muted"></i>
                        <p class="text-muted mt-3">No job posts found. <a href="@Url.Action("Create", "JobPosts")">Create
                                your first job post</a> to get started.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "JobPosts")" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-plus-circle"></i>
                            <br>
                            Create Job Post
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Index", "Applicants")" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-people"></i>
                            <br>
                            Manage Applicants
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Index", "Screening")" class="btn btn-info btn-lg w-100">
                            <i class="bi bi-search"></i>
                            <br>
                            View AI Results
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Index", "JobPosts")" class="btn btn-warning btn-lg w-100">
                            <i class="bi bi-list-ul"></i>
                            <br>
                            All Job Posts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable for recent job posts
            $('#recentJobPostsTable').DataTable({
                "pageLength": 5,
                "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]],
                "order": [[5, "desc"]], // Sort by posted date descending
                "columnDefs": [
                    { "orderable": false, "targets": 6 } // Disable sorting on Actions column
                ]
            });
        });
    </script>
}
