@model dynamic
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<!-- Welcome Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div>
                <h1 class="h2 mb-1 text-dark">
                    <i class="bi bi-speedometer2 text-primary me-2"></i>
                    Dashboard
                </h1>
                <p class="text-muted mb-0">Welcome to Smart CV Filter - AI-Powered Resume Screening</p>
            </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <button type="button" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-download me-1"></i>
                        Export Report
                    </button>
                    <button type="button" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>
                        Quick Add
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-primary border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-2">
                            <i class="bi bi-briefcase me-1"></i>
                            Total Job Posts
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">@Model.TotalJobPosts</div>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>
                            +12% from last month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-briefcase fs-1 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-success border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-success text-uppercase mb-2">
                            <i class="bi bi-check-circle me-1"></i>
                            Active Job Posts
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">@Model.ActiveJobPosts</div>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>
                            +8% from last month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-info border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-info text-uppercase mb-2">
                            <i class="bi bi-people me-1"></i>
                            Total Applicants
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">@Model.TotalApplicants</div>
                        <small class="text-info">
                            <i class="bi bi-arrow-up me-1"></i>
                            +25% from last month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people fs-1 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-warning border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-2">
                            <i class="bi bi-clock me-1"></i>
                            Pending Reviews
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">0</div>
                        <small class="text-warning">
                            <i class="bi bi-arrow-down me-1"></i>
                            -5% from last month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock fs-1 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Job Posts -->
<div class="row mb-5">
    <div class="col-12">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white border-0 py-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 fw-bold text-dark">
                            <i class="bi bi-briefcase text-primary me-2"></i>
                            Recent Job Posts
                        </h5>
                        <p class="text-muted mb-0">Latest job postings and their status</p>
                    </div>
                    <a href="@Url.Action("Index", "JobPosts")" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-arrow-right me-1"></i>
                        View All
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentJobPosts != null && Model.RecentJobPosts.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="recentJobPostsTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Job Title</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Location</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Department</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Status</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Applicants</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Posted Date</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var jobPost in Model.RecentJobPosts)
                                {
                                    <tr class="border-bottom">
                                        <td class="px-4 py-3">
                                            <div class="fw-bold text-dark">@jobPost.Title</div>
                                        </td>
                                        <td class="px-4 py-3">
                                            <i class="bi bi-geo-alt text-muted me-1"></i>
                                            @jobPost.Location
                                        </td>
                                        <td class="px-4 py-3">
                                            <span class="badge bg-light text-dark">@jobPost.Department</span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span
                                                class="badge @(jobPost.Status == "Active" ? "bg-success" : "bg-secondary") px-3 py-2">
                                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                                                @jobPost.Status
                                            </span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span class="badge bg-info px-3 py-2">
                                                <i class="bi bi-people me-1"></i>
                                                @jobPost.ApplicantCount
                                            </span>
                                        </td>
                                        <td class="px-4 py-3 text-muted">
                                            <i class="bi bi-calendar me-1"></i>
                                            @jobPost.PostedDate.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="px-4 py-3 text-center">
                                            <a href="@Url.Action("Details", "JobPosts", new { id = jobPost.Id })"
                                                class="btn btn-outline-primary btn-sm me-1" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "JobPosts", new { id = jobPost.Id })"
                                                class="btn btn-outline-secondary btn-sm" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="bi bi-briefcase display-1 text-muted opacity-50"></i>
                        </div>
                        <h5 class="text-muted mb-3">No job posts found</h5>
                        <p class="text-muted mb-4">Get started by creating your first job posting to attract qualified
                            candidates.</p>
                        <a href="@Url.Action("Create", "JobPosts")" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>
                            Create Your First Job Post
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-5">
    <div class="col-12">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white border-0 py-4">
                <h5 class="mb-1 fw-bold text-dark">
                    <i class="bi bi-lightning text-warning me-2"></i>
                    Quick Actions
                </h5>
                <p class="text-muted mb-0">Common tasks to get you started quickly</p>
            </div>
            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-lg-3 col-md-6">
                        <a href="@Url.Action("Create", "JobPosts")" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100 quick-action-card">
                                <div class="card-body text-center p-4">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                        style="width: 60px; height: 60px;">
                                        <i class="bi bi-plus-circle fs-2 text-primary"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark mb-2">Create Job Post</h6>
                                    <p class="text-muted small mb-0">Post a new job opening and start attracting
                                        candidates</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <a href="@Url.Action("Index", "Applicants")" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100 quick-action-card">
                                <div class="card-body text-center p-4">
                                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                        style="width: 60px; height: 60px;">
                                        <i class="bi bi-people fs-2 text-success"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark mb-2">Manage Applicants</h6>
                                    <p class="text-muted small mb-0">Review and manage candidate applications</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <a href="@Url.Action("Index", "Screening")" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100 quick-action-card">
                                <div class="card-body text-center p-4">
                                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                        style="width: 60px; height: 60px;">
                                        <i class="bi bi-search fs-2 text-info"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark mb-2">AI Screening Results</h6>
                                    <p class="text-muted small mb-0">View AI-powered candidate analysis and rankings</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <a href="@Url.Action("Index", "JobPosts")" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100 quick-action-card">
                                <div class="card-body text-center p-4">
                                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                        style="width: 60px; height: 60px;">
                                        <i class="bi bi-list-ul fs-2 text-warning"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark mb-2">All Job Posts</h6>
                                    <p class="text-muted small mb-0">View and manage all your job postings</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable for recent job posts
            $('#recentJobPostsTable').DataTable({
                "pageLength": 5,
                "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]],
                "order": [[5, "desc"]], // Sort by posted date descending
                "columnDefs": [
                    { "orderable": false, "targets": 6 } // Disable sorting on Actions column
                ]
            });
        });
    </script>
}
