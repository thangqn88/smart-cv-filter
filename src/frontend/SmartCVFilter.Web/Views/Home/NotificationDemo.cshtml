@{
    ViewData["Title"] = "Notification Demo";
    Layout = "_Layout";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div>
                <h1 class="h2 mb-1 text-dark">
                    <i class="bi bi-bell text-primary me-2"></i>
                    Notification System Demo
                </h1>
                <p class="text-muted mb-0">Test the notification system with different types of messages</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white border-0 py-4">
                <h5 class="mb-1 fw-bold text-dark">
                    <i class="bi bi-lightning text-primary me-2"></i>
                    Test Notifications
                </h5>
                <p class="text-muted mb-0">Click the buttons below to test different notification types</p>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-6 col-lg-3">
                        <button type="button" class="btn btn-success w-100"
                            onclick="showSuccess('Operation completed successfully!', 'Success', 5000)">
                            <i class="bi bi-check-circle me-2"></i>
                            Success Notification
                        </button>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <button type="button" class="btn btn-danger w-100"
                            onclick="showError('Something went wrong! Please try again.', 'Error', 0)">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Error Notification
                        </button>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <button type="button" class="btn btn-warning w-100"
                            onclick="showWarning('Please review your settings before proceeding.', 'Warning', 7000)">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            Warning Notification
                        </button>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <button type="button" class="btn btn-info w-100"
                            onclick="showInfo('Here is some helpful information for you.', 'Information', 5000)">
                            <i class="bi bi-info-circle me-2"></i>
                            Info Notification
                        </button>
                    </div>
                </div>

                <hr class="my-4">

                <div class="row g-3">
                    <div class="col-md-6">
                        <h6 class="fw-bold text-dark mb-3">Multiple Notifications</h6>
                        <button type="button" class="btn btn-outline-primary me-2"
                            onclick="showMultipleNotifications()">
                            <i class="bi bi-stack me-1"></i>
                            Show Multiple
                        </button>
                        <button type="button" class="btn btn-outline-secondary" onclick="clearAllNotifications()">
                            <i class="bi bi-x-circle me-1"></i>
                            Clear All
                        </button>
                    </div>
                    <div class="col-md-6">
                        <h6 class="fw-bold text-dark mb-3">Custom Notifications</h6>
                        <button type="button" class="btn btn-outline-success me-2" onclick="showCustomNotification()">
                            <i class="bi bi-gear me-1"></i>
                            Custom Style
                        </button>
                        <button type="button" class="btn btn-outline-warning" onclick="showPersistentNotification()">
                            <i class="bi bi-pin me-1"></i>
                            Persistent
                        </button>
                    </div>
                </div>

                <hr class="my-4">

                <div class="row">
                    <div class="col-12">
                        <h6 class="fw-bold text-dark mb-3">Notification Features</h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="card border-0 bg-light">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-success">
                                            <i class="bi bi-check-circle me-1"></i>
                                            Auto-dismiss
                                        </h6>
                                        <p class="card-text small text-muted mb-0">
                                            Notifications automatically disappear after a set duration (except errors)
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-0 bg-light">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-info">
                                            <i class="bi bi-x-circle me-1"></i>
                                            Dismissible
                                        </h6>
                                        <p class="card-text small text-muted mb-0">
                                            Users can manually dismiss notifications by clicking the X button
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-0 bg-light">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-warning">
                                            <i class="bi bi-phone me-1"></i>
                                            Responsive
                                        </h6>
                                        <p class="card-text small text-muted mb-0">
                                            Notifications adapt to different screen sizes and devices
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showMultipleNotifications() {
        showSuccess('First notification', 'Success 1', 3000);
        setTimeout(() => showInfo('Second notification', 'Info 1', 3000), 500);
        setTimeout(() => showWarning('Third notification', 'Warning 1', 3000), 1000);
        setTimeout(() => showError('Fourth notification', 'Error 1', 0), 1500);
    }

    function showCustomNotification() {
        // Create a custom notification with action button
        const container = document.getElementById('notification-container') || createNotificationContainer();
        const notificationId = 'custom-' + Date.now();

        const notificationHtml = `
            <div class="notification notification-info dismissible" 
                 data-notification-id="${notificationId}" 
                 data-duration="0">
                <div class="notification-content">
                    <div class="notification-icon">
                        <i class="bi bi-gear"></i>
                    </div>
                    <div class="notification-body">
                        <div class="notification-title">Custom Notification</div>
                        <div class="notification-message">This is a custom notification with special styling and actions.</div>
                        <div class="notification-actions">
                            <button class="btn btn-sm btn-outline-primary" onclick="alert('Action clicked!')">
                                Take Action
                            </button>
                        </div>
                    </div>
                    <button type="button" class="notification-close" onclick="dismissNotification('${notificationId}')">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            </div>
        `;

        container.insertAdjacentHTML('beforeend', notificationHtml);
        const newNotification = container.lastElementChild;
        setTimeout(() => newNotification.classList.add('notification-show'), 10);
    }

    function showPersistentNotification() {
        showError('This is a persistent notification that will not auto-dismiss. You must manually close it.', 'Persistent Error', 0);
    }

    function clearAllNotifications() {
        // Remove all notifications from the DOM
        const container = document.getElementById('notification-container');
        if (container) {
            container.innerHTML = '';
        }

        // Also clear from server-side session
        fetch('/api/notification/clear', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        }).catch(error => {
            console.warn('Failed to clear notifications from server:', error);
        });
    }
</script>
