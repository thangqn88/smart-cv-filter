@using SmartCVFilter.Web.Models
@model UpdateApplicantRequest
@{
    ViewData["Title"] = "Edit Applicant";
    var jobPostId = ViewData["JobPostId"];
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit Applicant</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Index", new { jobPostId = jobPostId })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            Back to List
        </a>
    </div>
</div>

<form asp-controller="Applicants" asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" name="jobPostId" value="@jobPostId" />

    <div class="row">
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i>
                        Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">First Name *</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name"
                                    required />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Last Name *</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email Address *</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" type="email" class="form-control"
                                    placeholder="Enter email address" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-telephone"></i>
                                </span>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Professional Links -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-link-45deg"></i>
                        Professional Links
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LinkedInProfile" class="form-label">LinkedIn Profile</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-linkedin"></i>
                                </span>
                                <input asp-for="LinkedInProfile" class="form-control"
                                    placeholder="https://linkedin.com/in/username" />
                            </div>
                            <span asp-validation-for="LinkedInProfile" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="PortfolioUrl" class="form-label">Portfolio URL</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-globe"></i>
                                </span>
                                <input asp-for="PortfolioUrl" class="form-control"
                                    placeholder="https://portfolio.com" />
                            </div>
                            <span asp-validation-for="PortfolioUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cover Letter -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text"></i>
                        Cover Letter
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="CoverLetter" class="form-label">Cover Letter</label>
                        <textarea asp-for="CoverLetter" class="form-control" rows="6"
                            placeholder="Enter cover letter or additional notes about the applicant..."></textarea>
                        <span asp-validation-for="CoverLetter" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Status -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-gear"></i>
                        Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Applicant Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Pending">Pending</option>
                            <option value="Screened">Screened</option>
                            <option value="Rejected">Rejected</option>
                            <option value="Hired">Hired</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Preview Card -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-eye"></i>
                        Preview
                    </h5>
                </div>
                <div class="card-body">
                    <div id="previewContent">
                        <h6 class="text-muted">Applicant name will appear here</h6>
                        <p class="text-muted">Email address</p>
                        <p class="text-muted">Phone number</p>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i>
                        Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i>
                            Update Applicant
                        </button>
                        <a href="@Url.Action("Index", new { jobPostId = jobPostId })" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i>
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Live preview functionality
        function updatePreview() {
            const firstName = document.querySelector('input[name="FirstName"]').value || 'First';
            const lastName = document.querySelector('input[name="LastName"]').value || 'Last';
            const email = document.querySelector('input[name="Email"]').value || 'email@example.com';
            const phone = document.querySelector('input[name="PhoneNumber"]').value || 'Not provided';

            const previewContent = document.getElementById('previewContent');
            previewContent.innerHTML = `
                                <h6>${firstName} ${lastName}</h6>
                                <p class="text-muted">${email}</p>
                                <p class="text-muted">${phone}</p>
                            `;
        }

        // Add event listeners for live preview
        document.querySelectorAll('input[name="FirstName"], input[name="LastName"], input[name="Email"], input[name="PhoneNumber"]').forEach(element => {
            element.addEventListener('input', updatePreview);
        });

        // Initialize preview
        updatePreview();
    </script>
}
