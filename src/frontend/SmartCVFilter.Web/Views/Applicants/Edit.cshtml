@using SmartCVFilter.Web.Models
@model UpdateApplicantRequest
@{
    ViewData["Title"] = "Edit Applicant";
    Layout = "_Layout";
    var jobPostId = ViewData["JobPostId"];
    var applicantId = ViewData["ApplicantId"];
}

<!-- Debug Information -->
@if (Model != null)
{
    <div class="alert alert-info mb-4">
        <h6><i class="bi bi-info-circle me-2"></i>Debug Information</h6>
        <div class="row">
            <div class="col-md-6">
                <p class="mb-1"><strong>JobPostId:</strong> @(jobPostId?.ToString() ?? "NULL")</p>
                <p class="mb-1"><strong>ApplicantId:</strong> @(applicantId?.ToString() ?? "NULL")</p>
                <p class="mb-1"><strong>FirstName:</strong> @(Model?.FirstName ?? "NULL")</p>
                <p class="mb-1"><strong>LastName:</strong> @(Model?.LastName ?? "NULL")</p>
                <p class="mb-1"><strong>Email:</strong> @(Model?.Email ?? "NULL")</p>
            </div>
            <div class="col-md-6">
                <p class="mb-1"><strong>PhoneNumber:</strong> @(Model?.PhoneNumber ?? "NULL")</p>
                <p class="mb-1"><strong>Status:</strong> @(Model?.Status ?? "NULL")</p>
                <p class="mb-1"><strong>LinkedInProfile:</strong> @(Model?.LinkedInProfile ?? "NULL")</p>
                <p class="mb-1"><strong>PortfolioUrl:</strong> @(Model?.PortfolioUrl ?? "NULL")</p>
                <p class="mb-1"><strong>CoverLetter:</strong> @(string.IsNullOrEmpty(Model?.CoverLetter) ? "NULL" : Model.CoverLetter.Substring(0, Math.Min(50, Model.CoverLetter.Length)) + "...")</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger mb-4">
        <h6><i class="bi bi-exclamation-triangle me-2"></i>Model is NULL</h6>
        <p>The model passed to the view is null. This indicates an issue with the controller action.</p>
    </div>
}

<!-- Welcome Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div>
                <h1 class="h2 mb-1 text-dark">
                    <i class="bi bi-pencil text-primary me-2"></i>
                    Edit Applicant
                </h1>
                <p class="text-muted mb-0">Update candidate information and details</p>
            </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <a href="@Url.Action("Index", new { jobPostId = jobPostId })" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<form asp-controller="Applicants" asp-action="Edit" asp-route-jobPostId="@jobPostId" asp-route-id="@ViewData["ApplicantId"]" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-person text-primary me-2"></i>
                        Personal Information
                    </h5>
                    <p class="text-muted mb-0">Basic candidate information</p>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="FirstName" class="form-label fw-bold text-dark">First Name *</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-person text-muted"></i>
                                </span>
                                <input asp-for="FirstName" class="form-control border-start-0"
                                    placeholder="Enter first name" value="@(Model?.FirstName ?? "")" required />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="LastName" class="form-label fw-bold text-dark">Last Name *</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-person text-muted"></i>
                                </span>
                                <input asp-for="LastName" class="form-control border-start-0"
                                    placeholder="Enter last name" value="@(Model?.LastName ?? "")" required />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Email" class="form-label fw-bold text-dark">Email Address *</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-envelope text-muted"></i>
                                </span>
                                <input asp-for="Email" type="email" class="form-control border-start-0"
                                    placeholder="Enter email address" value="@(Model?.Email ?? "")" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-bold text-dark">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-telephone text-muted"></i>
                                </span>
                                <input asp-for="PhoneNumber" class="form-control border-start-0"
                                    placeholder="Enter phone number" value="@(Model?.PhoneNumber ?? "")" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Professional Links -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-link-45deg text-primary me-2"></i>
                        Professional Links
                    </h5>
                    <p class="text-muted mb-0">Optional professional profiles and portfolios</p>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="LinkedInProfile" class="form-label fw-bold text-dark">LinkedIn
                                Profile</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-linkedin text-muted"></i>
                                </span>
                                <input asp-for="LinkedInProfile" class="form-control border-start-0"
                                    placeholder="https://linkedin.com/in/username"
                                    value="@(Model?.LinkedInProfile ?? "")" />
                            </div>
                            <span asp-validation-for="LinkedInProfile" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="PortfolioUrl" class="form-label fw-bold text-dark">Portfolio URL</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-globe text-muted"></i>
                                </span>
                                <input asp-for="PortfolioUrl" class="form-control border-start-0"
                                    placeholder="https://portfolio.com" value="@(Model?.PortfolioUrl ?? "")" />
                            </div>
                            <span asp-validation-for="PortfolioUrl" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cover Letter -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-file-text text-primary me-2"></i>
                        Cover Letter
                    </h5>
                    <p class="text-muted mb-0">Optional cover letter content</p>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label asp-for="CoverLetter" class="form-label fw-bold text-dark">Cover Letter</label>
                        <textarea asp-for="CoverLetter" class="form-control" rows="6"
                            placeholder="Enter cover letter or additional notes about the applicant...">@(Model?.CoverLetter ?? "")</textarea>
                        <span asp-validation-for="CoverLetter" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <!-- Status -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-gear text-primary me-2"></i>
                        Status
                    </h5>
                    <p class="text-muted mb-0">Update applicant status</p>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label asp-for="Status" class="form-label fw-bold text-dark">Applicant Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Pending" selected="@(Model?.Status == "Pending")">Pending</option>
                            <option value="Screened" selected="@(Model?.Status == "Screened")">Screened</option>
                            <option value="Rejected" selected="@(Model?.Status == "Rejected")">Rejected</option>
                            <option value="Hired" selected="@(Model?.Status == "Hired")">Hired</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Preview Card -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-eye text-primary me-2"></i>
                        Live Preview
                    </h5>
                    <p class="text-muted mb-0">See how the applicant will appear</p>
                </div>
                <div class="card-body p-4">
                    <div id="previewContent">
                        <h6 class="text-muted">Applicant name will appear here</h6>
                        <p class="text-muted">Email address</p>
                        <p class="text-muted">Phone number</p>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-white border-0 py-4">
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-lightning text-primary me-2"></i>
                        Actions
                    </h5>
                    <p class="text-muted mb-0">Save or cancel the form</p>
                </div>
                <div class="card-body p-4">
                    <div class="d-grid gap-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle me-1"></i>
                            Update Applicant
                        </button>
                        <a href="@Url.Action("Index", new { jobPostId = jobPostId })"
                            class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle me-1"></i>
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Live preview functionality
        function updatePreview() {
            const firstName = document.querySelector('input[name="FirstName"]').value || 'First';
            const lastName = document.querySelector('input[name="LastName"]').value || 'Last';
            const email = document.querySelector('input[name="Email"]').value || 'email@example.com';
            const phone = document.querySelector('input[name="PhoneNumber"]').value || 'Not provided';

            const previewContent = document.getElementById('previewContent');
            previewContent.innerHTML = `
                                                <h6>${firstName} ${lastName}</h6>
                                                <p class="text-muted">${email}</p>
                                                <p class="text-muted">${phone}</p>
                                            `;
        }

        // Add event listeners for live preview
        document.querySelectorAll('input[name="FirstName"], input[name="LastName"], input[name="Email"], input[name="PhoneNumber"]').forEach(element => {
            element.addEventListener('input', updatePreview);
        });

        // Form submission debugging
        document.querySelector('form').addEventListener('submit', function(e) {
            console.log('Form submission started');
            const formData = new FormData(this);
            console.log('Form data:');
            for (let [key, value] of formData.entries()) {
                console.log(key + ': ' + value);
            }
        });

        // Initialize preview
        updatePreview();
    </script>
}
