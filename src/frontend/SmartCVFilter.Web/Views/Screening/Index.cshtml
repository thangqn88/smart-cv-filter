@using SmartCVFilter.Web.Models
@model List<ScreeningResultResponse>
@{
    ViewData["Title"] = "AI Screening Results";
    var applicantId = ViewData["ApplicantId"];
    Layout = "_Layout";
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div>
                <h1 class="h2 mb-1 text-dark">
                    <i class="bi bi-search text-primary me-2"></i>
                    AI Screening Results
                </h1>
                <p class="text-muted mb-0">AI-powered candidate analysis and evaluation results</p>
            </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <button type="button" class="btn btn-outline-primary"
                        onclick="exportToCSV('screeningResultsTable', 'screening-results.csv')">
                        <i class="bi bi-download me-1"></i>
                        Export CSV
                    </button>
                    <button type="button" class="btn btn-outline-secondary"
                        onclick="printTable('screeningResultsTable')">
                        <i class="bi bi-printer me-1"></i>
                        Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-start-0 table-search"
                                placeholder="Search screening results by summary or ID...">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="statusFilter" id="all" value="all" checked>
                            <label class="btn btn-outline-secondary" for="all">
                                <i class="bi bi-list me-1"></i>All
                            </label>

                            <input type="radio" class="btn-check" name="statusFilter" id="completed" value="Completed">
                            <label class="btn btn-outline-success" for="completed">
                                <i class="bi bi-check-circle me-1"></i>Completed
                            </label>

                            <input type="radio" class="btn-check" name="statusFilter" id="processing"
                                value="Processing">
                            <label class="btn btn-outline-warning" for="processing">
                                <i class="bi bi-clock me-1"></i>Processing
                            </label>

                            <input type="radio" class="btn-check" name="statusFilter" id="failed" value="Failed">
                            <label class="btn btn-outline-danger" for="failed">
                                <i class="bi bi-x-circle me-1"></i>Failed
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Screening Results -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white border-0 py-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 fw-bold text-dark">
                            <i class="bi bi-search text-primary me-2"></i>
                            AI Screening Results
                        </h5>
                        <p class="text-muted mb-0">@(Model?.Count ?? 0) screening result(s) found</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success me-2">@(Model?.Count(x => x.Status == "Completed") ?? 0)
                            Completed</span>
                        <span class="badge bg-warning me-2">@(Model?.Count(x => x.Status == "Processing") ?? 0)
                            Processing</span>
                        <span class="badge bg-danger">@(Model?.Count(x => x.Status == "Failed") ?? 0) Failed</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model != null && Model.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="screeningResultsTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">ID</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Overall Score</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Summary</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Strengths</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Weaknesses</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Status</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Created</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark">Completed</th>
                                    <th class="border-0 px-4 py-3 fw-bold text-dark text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var result in Model)
                                {
                                    <tr class="border-bottom">
                                        <td class="px-4 py-3">
                                            <div class="fw-bold text-dark">#@result.Id</div>
                                        </td>
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="progress me-3" style="width: 80px; height: 8px;">
                                                    <div class="progress-bar @(result.OverallScore >= 80 ? "bg-success" : result.OverallScore >= 60 ? "bg-warning" : "bg-danger")"
                                                        style="width: @result.OverallScore%"></div>
                                                </div>
                                                <span
                                                    class="fw-bold @(result.OverallScore >= 80 ? "text-success" : result.OverallScore >= 60 ? "text-warning" : "text-danger")">
                                                    @result.OverallScore/100
                                                </span>
                                            </div>
                                        </td>
                                        <td class="px-4 py-3">
                                            <div class="text-truncate" style="max-width: 250px;" title="@result.Summary">
                                                @result.Summary
                                            </div>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span class="badge bg-success px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i>
                                                @result.Strengths.Count
                                            </span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span class="badge bg-warning px-3 py-2">
                                                <i class="bi bi-exclamation-triangle me-1"></i>
                                                @result.Weaknesses.Count
                                            </span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span
                                                class="badge @(result.Status == "Completed" ? "bg-success" : result.Status == "Processing" ? "bg-warning" : "bg-danger") px-3 py-2">
                                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                                                @result.Status
                                            </span>
                                        </td>
                                        <td class="px-4 py-3 text-muted">
                                            <i class="bi bi-calendar me-1"></i>
                                            @result.CreatedAt.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="px-4 py-3 text-muted">
                                            <i class="bi bi-calendar-check me-1"></i>
                                            @(result.CompletedAt?.ToString("MMM dd, yyyy") ?? "N/A")
                                        </td>
                                        <td class="px-4 py-3 text-center">
                                            <a href="@Url.Action("Details", new { id = result.Id })"
                                                class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip"
                                                title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="bi bi-search display-1 text-muted opacity-50"></i>
                        </div>
                        <h5 class="text-muted mb-3">No Screening Results Found</h5>
                        <p class="text-muted mb-4">
                            @if (applicantId != null)
                            {
                                <span>No AI screening results found for this applicant.</span>
                            }
                            else
                            {
                                <span>No AI screening results found. Start screening applicants to see results here.</span>
                            }
                        </p>
                        @if (applicantId == null)
                        {
                            <a href="@Url.Action("Index", "Applicants")" class="btn btn-primary">
                                <i class="bi bi-people me-2"></i>
                                Start Screening Applicants
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filter by status
        document.querySelectorAll('input[name="statusFilter"]').forEach(radio => {
            radio.addEventListener('change', function () {
                const status = this.value;
                const rows = document.querySelectorAll('#screeningResultsTable tbody tr');

                rows.forEach(row => {
                    if (status === 'all') {
                        row.style.display = '';
                    } else {
                        const statusCell = row.querySelector('td:nth-child(6) .badge');
                        const cellStatus = statusCell ? statusCell.textContent.trim() : '';
                        row.style.display = cellStatus === status ? '' : 'none';
                    }
                });
            });
        });

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
