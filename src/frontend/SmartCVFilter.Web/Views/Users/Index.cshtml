@using SmartCVFilter.Web.Models
@model UserIndexViewModel
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<!-- Welcome Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div>
                <h1 class="h2 mb-1 text-dark">
                    <i class="bi bi-people text-primary me-2"></i>
                    User Management
                </h1>
                <p class="text-muted mb-0">Manage system users, roles, and permissions</p>
            </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="bi bi-person-plus me-1"></i>
                        Create User
                    </a>
                    <button type="button" class="btn btn-outline-secondary">
                        <i class="bi bi-download me-1"></i>
                        Export
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-primary border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-2">
                            <i class="bi bi-people me-1"></i>
                            Total Users
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">@Model.TotalUsers</div>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>
                            +5% from last month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people fs-1 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-success border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-success text-uppercase mb-2">
                            <i class="bi bi-check-circle me-1"></i>
                            Active Users
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">@Model.ActiveUsers</div>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>
                            +8% from last month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-warning border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-2">
                            <i class="bi bi-pause-circle me-1"></i>
                            Inactive Users
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">@Model.InactiveUsers</div>
                        <small class="text-warning">
                            <i class="bi bi-arrow-down me-1"></i>
                            -2% from last month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-pause-circle fs-1 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-info border-4 shadow-lg h-100 hover-card">
            <div class="card-body p-4">
                <div class="row g-0 align-items-center">
                    <div class="col me-3">
                        <div class="text-xs fw-bold text-info text-uppercase mb-2">
                            <i class="bi bi-shield-check me-1"></i>
                            Admin Users
                        </div>
                        <div class="h3 mb-0 fw-bold text-dark">@(Model.Users.Count(u => u.Role == "Admin"))</div>
                        <small class="text-info">
                            <i class="bi bi-arrow-up me-1"></i>
                            +1 this month
                        </small>
                    </div>
                    <div class="col-auto">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-shield-check fs-1 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-text bg-white border-end-0">
                <i class="bi bi-search text-muted"></i>
            </span>
            <input type="text" class="form-control border-start-0 table-search"
                placeholder="Search users by name, email, or company...">
        </div>
    </div>
    <div class="col-md-6">
        <div class="btn-group w-100" role="group">
            <input type="radio" class="btn-check" name="statusFilter" id="all" value="all" checked>
            <label class="btn btn-outline-secondary" for="all">
                <i class="bi bi-list me-1"></i>All
            </label>

            <input type="radio" class="btn-check" name="statusFilter" id="active" value="active">
            <label class="btn btn-outline-success" for="active">
                <i class="bi bi-check-circle me-1"></i>Active
            </label>

            <input type="radio" class="btn-check" name="statusFilter" id="inactive" value="inactive">
            <label class="btn btn-outline-warning" for="inactive">
                <i class="bi bi-pause-circle me-1"></i>Inactive
            </label>

            <input type="radio" class="btn-check" name="statusFilter" id="admin" value="admin">
            <label class="btn btn-outline-info" for="admin">
                <i class="bi bi-shield-check me-1"></i>Admin
            </label>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="card shadow-lg border-0">
    <div class="card-header bg-white border-0 py-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1 fw-bold text-dark">
                    <i class="bi bi-people text-primary me-2"></i>
                    Users
                </h5>
                <p class="text-muted mb-0">Manage system users and their permissions</p>
            </div>
            <div class="text-muted">
                <small>Total: <span class="fw-bold text-dark">@Model.Users.Count</span> users</small>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="usersTable">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0 px-4 py-3 fw-bold text-dark">Name</th>
                            <th class="border-0 px-4 py-3 fw-bold text-dark">Email</th>
                            <th class="border-0 px-4 py-3 fw-bold text-dark">Company</th>
                            <th class="border-0 px-4 py-3 fw-bold text-dark">Role</th>
                            <th class="border-0 px-4 py-3 fw-bold text-dark">Status</th>
                            <th class="border-0 px-4 py-3 fw-bold text-dark">Last Login</th>
                            <th class="border-0 px-4 py-3 fw-bold text-dark">Created</th>
                            <th class="border-0 px-4 py-3 fw-bold text-dark text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="border-bottom">
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3"
                                            style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@user.FirstName @user.LastName</div>
                                            <small class="text-muted">ID: @user.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <i class="bi bi-envelope text-muted me-1"></i>
                                    @user.Email
                                </td>
                                <td class="px-4 py-3">
                                    <i class="bi bi-building text-muted me-1"></i>
                                    @(user.CompanyName ?? "N/A")
                                </td>
                                <td class="px-4 py-3">
                                    <span
                                        class="badge @(user.Role == "Admin" ? "bg-danger" : user.Role == "Manager" ? "bg-warning" : "bg-secondary") px-3 py-2">
                                        <i class="bi bi-shield-check me-1"></i>
                                        @user.Role
                                    </span>
                                </td>
                                <td class="px-4 py-3">
                                    <span class="badge @(user.IsActive ? "bg-success" : "bg-warning") px-3 py-2">
                                        <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                                        @(user.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    @(user.LastLoginAt?.ToString("MMM dd, yyyy") ?? "Never")
                                </td>
                                <td class="px-4 py-3 text-muted">
                                    <i class="bi bi-calendar me-1"></i>
                                    @user.CreatedAt.ToString("MMM dd, yyyy")
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = user.Id })"
                                            class="btn btn-outline-warning btn-sm me-1" data-bs-toggle="tooltip"
                                            title="Edit User">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip"
                                            title="Delete User"
                                            onclick="confirmDelete('@user.FirstName @user.LastName', () => deleteUser('@user.Id'))">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-people display-1 text-muted opacity-50"></i>
                </div>
                <h5 class="text-muted mb-3">No users found</h5>
                <p class="text-muted mb-4">Get started by creating your first user account.</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="bi bi-person-plus me-2"></i>
                    Create First User
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // Filter by status
        document.querySelectorAll('input[name="statusFilter"]').forEach(radio => {
            radio.addEventListener('change', function () {
                const status = this.value;
                const rows = document.querySelectorAll('#usersTable tbody tr');

                rows.forEach(row => {
                    if (status === 'all') {
                        row.style.display = '';
                    } else if (status === 'active') {
                        const statusCell = row.querySelector('td:nth-child(5) .badge');
                        const isActive = statusCell ? statusCell.textContent.includes('Active') : false;
                        row.style.display = isActive ? '' : 'none';
                    } else if (status === 'inactive') {
                        const statusCell = row.querySelector('td:nth-child(5) .badge');
                        const isInactive = statusCell ? statusCell.textContent.includes('Inactive') : false;
                        row.style.display = isInactive ? '' : 'none';
                    } else if (status === 'admin') {
                        const roleCell = row.querySelector('td:nth-child(4) .badge');
                        const isAdmin = roleCell ? roleCell.textContent.includes('Admin') : false;
                        row.style.display = isAdmin ? '' : 'none';
                    }
                });
            });
        });

        function deleteUser(userId) {
            const form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete")/' + userId;
            form.submit();
        }

        function confirmDelete(name, callback) {
            if (confirm(`Are you sure you want to delete ${name}? This action cannot be undone.`)) {
                callback();
            }
        }

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
